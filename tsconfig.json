{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "declaration": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
